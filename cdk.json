{
  "app": "npx ts-node --prefer-ts-exts bin/sample-app.ts",
  "versionReporting": false,
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "**/*.d.ts",
      "**/*.js",
      "tsconfig.json",
      "package*.json",
      "yarn.lock",
      "node_modules",
      "test"
    ]
  },
  "context": {
    "systemName": "sample",
    "dev": {
      "description": "develop environment",
      "envName": "dev",
      "envVariables": {
        "region": "ap-northeast-1"
      }
    },
    "staging": {
      "description": "staging environment",
      "envName": "stg",
      "envVariables": {
        "region": "ap-northeast-1"
      }
    }
  }
}
